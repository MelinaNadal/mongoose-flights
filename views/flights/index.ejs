<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <title>Mongoose Flights</title>
</head>
<body>
    <h1>All Flights</h1>
    <a href="/">Back Home</a>
    <a href="/flights/new">Create a New Flight</a>
    <table>
        <thead>
            <tr>
                <th>Airline</th>
                <th>Flight No</th>
                <th>Departs</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% flights.forEach(function(flight) { %>
                <tr>
                    <td><%= flight.airline %></td>
                    <td><%= flight.flightNo %></td>
                    <td><%= flight.departs.toLocaleDateString() %></td>
                    <td><a href="/flights/<%= flight._id %>">Details</a></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</body>
</html>